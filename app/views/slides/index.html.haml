%h1 Listing slides

%table
  %tr
    %th Imagen
    %th Link
    %th
    %th
    %th

  - @slides.each do |slide|
    %tr
      %td= slide.imagen
      %td= slide.link
      %td= link_to 'Show', slide
      %td= link_to 'Edit', edit_slide_path(slide)
      %td= link_to 'Destroy', slide, :method => :delete, :data => { :confirm => 'Are you sure?' }


= form_for @slide, :html => { :multipart => true } do |f|
  - if @slide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slide.errors.count, "error")} prohibited this slide from being saved:"
      %ul
        - @slide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :imagen
    = f.file_field :imagen
  .field
    = f.label :caption
    = f.text_field :caption
  .field
    = f.label :link
    = f.text_field :link
  .actions
    = f.submit 'Save'
